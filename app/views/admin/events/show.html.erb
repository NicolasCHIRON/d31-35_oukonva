<center>
  </br>
  <div class="card-body card-border" style="width: 35rem;">
  
    <p> <span style="color: blue;">Il s'agit de l'évènement n° </span><%= params['id'] %> </p>

    <p> <span style="color: blue;">Proposé par </span><%= @event.administrator.first_name %> <%= @event.administrator.last_name %> </p>

    <p> <span style="color: blue;">Titre : </span><%= @event.title %></p>

    <p> <span style="color: blue;">Description : </span><%= @event.description %></p>

    <p> <span style="color: blue;">Nombre d'inscrit : </span><%= @event.attendees.count %></p>

    <p> <span style="color: blue;">Créateur de l'évènement : </span><%= @event.administrator.email %></p>

    <p> <span style="color: blue;">Date de début de l'évènement : </span><%= @event.start_date %></p>

    <p> <span style="color: blue;">Date de fin de l'évènement : </span><%= @event.end_date %></p>

    <p> <span style="color: blue;">Lieu de l'évènement : </span><%= @event.location %></p>

    <p> <span style="color: blue;">Prix : </span><%= @event.price %> euros</p> 

    <%= button_to "accept", admin_event_path(@event), method: :patch, params: { "event" =>  "true" }, class:"btn btn-success m-2" %>
    <%= button_to "decline", admin_event_path(@event), method: :patch, params: { "event" => "false" }, class:"btn btn-danger m-2" %>
    

    </div>
</center>

