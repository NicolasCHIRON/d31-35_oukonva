<p> Créer un évènement </p>

<center>
<%= form_for @event do |f| %>

  <div class="form-group">
    <label>Date de début</label>
    <%= f.datetime_select :start_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Durée de l'évènement</label>
    <%= f.number_field :duration, min: 0, step: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Nom de l'évènement</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Description de l'évènement</label>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Lieu de l'évènement</label>
    <%= f.text_area :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Prix de l'évènement</label>
    <%= f.number_field :price, min: 1, max: 1000, step: 1, class: 'form-control' %>
  </div>

  <div class="form_group" data-turbo=false>
    <button type="submit" class="btn btn-success"> Modifier le potin</button>
  </div>

<% end %>
</center>